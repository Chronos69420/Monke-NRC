Error[1] = 0

TP[0] = 50 '100

Kp[0] = 0.03 '0.08
Ki[0] = 0 '0.0008
Kd[0] = 0.1 '0.8

Intergal[0] = 0

Count[0] = 0
Count[1] = 0

Sensor.SetMode(2, 4)
Sensor.SetMode(3, 4)

