Sub readVal
  rawValue = Sensor.ReadRaw(2,3)
  rawValuei = Sensor.ReadRaw(3,3)
  lightVal[0] = rawValue[0] + rawValue[1] + rawValue[2]
  lightVal[1] = rawValuei[0] + rawValuei[1] + rawValuei[2]
EndSub

Sub PD
  Error[0] = lightVal[0] - TotalRGBTH[0]
  Intergal[0] = Error[0] + Intergal[0] *0.5
  Derivative[0] = Error[0] - Last_Error[0]
  Correction = (Error[0] * Kp[0]) + Derivative[0]*Kd[0] + Intergal[0]*Ki[0]
  Motor.StartSync("BC",Math.Max(Math.Min((TP[0] + Correction),100),-100),Math.Max(Math.Min((TP[0] - Correction),100),-100))
  Last_Error = Error
EndSub

Sub OpenClaw
  Motor.Start("AD",30)
  Program.Delay(500)
  Motor.Stop("AD","True")
EndSub

Sub CloseClaw
  Motor.Start("AD",-30)
  Program.Delay(500)
  Motor.Stop("AD","True")
EndSub

Sub OpenA
  Motor.Start("A",30)
  Program.Delay(500)
  Motor.Stop("A","True")
EndSub

Sub OpenD
  Motor.Start("D",30)
  Program.Delay(500)
  Motor.Stop("D","True")
EndSub

Sub CloseA 
  Motor.Start("A",-30)
  Program.Delay(500)
  Motor.Stop("A","True")
EndSub

Sub CloseD
  Motor.Start("D",-30)
  Program.Delay(400)
  Motor.Stop("D","True")
EndSub


Sub Step1  'Turn onto road'
  CloseA()
  CloseD()
  Motor.Move("BC",30,360,"True")
  Motor.Stop("BC","True")
  Program.Delay(20)
  Motor.MoveSync("BC",30,-30,200,"True")
  Motor.Stop("BC","True")
  Program.Delay(20)
  While Count[1] < 2
      readVal()
      if lightVal[0] < 100 then
          Speaker.Note(100,"B8",30)
          Program.Delay(10)
          Motor.MoveSync("BC",30,15,20,"False")
          Program.Delay(10)
           Count[1] = Count[1] + 1
      Endif
      Motor.StartSync("BC",30,15)
  EndWhile
  Motor.Stop("BC","True")
  Speaker.Note(100,"G8",70)
EndSub

Sub Step2 'Move till last slot'
    Motor.MoveSync("BC",15,30,100,"True")
    Count[0] = 0
    readVal()
    While Count[0] < 5
        PD()
        readVal()
        If lightVal[1] < 100 then 
            Speaker.Note(100,"B8",100)
            Program.Delay(10)
            Motor.Move("BC",30,30,"False")
            Count[0] = Count[0] + 1
        Endif
    EndWhile
    Speaker.Note(100,"G8,"100)
    Motor.Stop("BC","True")
    Program.Delay(100)
EndSub

